%div.data_file_flowbox
  %h2.file_header
    Data File
  =f.hidden_field :_destroy            
  %div.remove_file_button.right
    =link_to(image_tag("iconRemove.png"), "#")
  %div.forms
    =f.label :title, "Title/Path*"
    =f.text_field :title
    %br
    =f.label :record_count, "Number of Records"
    =f.text_field :record_count
    %br.clear
  .fields
    -data_file.fields.by_column.each do |field|
      -f.fields_for :fields, field do |ff|
        =render :partial => 'field', :locals => {:f => ff, :field => field}
    #field_template
      =gen_field_template(f)
  %br
  %div.add_field_button
    =link_to(image_tag("plus-h.png"), "#")
