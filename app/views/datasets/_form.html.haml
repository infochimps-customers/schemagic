-form_for @dataset do |form|

  =form.label :company_name
  =form.text_field :company_name
  %br
  =form.label :email
  =form.text_field :email
  %br
  =form.label :contact_name
  =form.text_field :contact_name
  %br
  =form.label :phone
  =form.text_field :phone
  %br
  =form.label :title
  =form.text_field :title

  =form.label :description
  =form.text_area :description, :rows => 3
  %br
  .data_files
    -form.fields_for :data_files, :child_index => Time.now.to_i do |ff|
      =render "data_file", :f => ff

      #field_template{:style => "display:none;"}
        =gen_field_template(ff)

  #data_file_template{:style => "display:none;"}
    =gen_data_file_template(form)


  %div.add_file_button
    =link_to(image_tag("32/plus-a.png"), "#")
    Add File
  %div{:style => "float:right;"}
    =form.submit "Review"


